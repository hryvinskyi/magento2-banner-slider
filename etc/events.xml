<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="hryvinskyi_banner_slider_save_after">
        <observer name="create_default_breakpoints"
                  instance="Hryvinskyi\BannerSlider\Observer\CreateDefaultBreakpointsOnSliderSave"/>
    </event>

    <!-- EntityManager observers for proper cache invalidation -->
    <event name="hryvinskyi_bannersliderapi_api_data_sliderinterface_save_after">
        <observer name="legacy_model_slider_after_save"
                  instance="Magento\Framework\EntityManager\Observer\AfterEntitySave"/>
    </event>
    <event name="hryvinskyi_bannersliderapi_api_data_sliderinterface_delete_after">
        <observer name="legacy_model_slider_after_delete"
                  instance="Magento\Framework\EntityManager\Observer\AfterEntityDelete"/>
    </event>
    <event name="hryvinskyi_bannersliderapi_api_data_bannerinterface_save_after">
        <observer name="legacy_model_banner_after_save"
                  instance="Magento\Framework\EntityManager\Observer\AfterEntitySave"/>
    </event>
    <event name="hryvinskyi_bannersliderapi_api_data_bannerinterface_delete_after">
        <observer name="legacy_model_banner_after_delete"
                  instance="Magento\Framework\EntityManager\Observer\AfterEntityDelete"/>
    </event>

</config>
